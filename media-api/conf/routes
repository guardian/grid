# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.MediaApi.index

# Images
GET     /image/:id                  controllers.MediaApi.getImage(id: String)

POST /image/:id/add-to-bucket       controllers.MediaApi.addImageToBucket(id: String)
POST /image/:id/remove-from-bucket  controllers.MediaApi.removeImageFromBucket(id: String)

DELETE  /image/:id                  controllers.MediaApi.deleteImage(id: String)

GET     /images                     controllers.MediaApi.imageSearch
GET     /buckets                    controllers.MediaApi.getAllBuckets

# Index management
POST    /delete-index               controllers.IndexManagement.deleteIndex

# Management
GET     /health-check               controllers.HealthCheck.healthCheck

# Enable CORS
OPTIONS /*url                       controllers.CorsPreflight.options(url: String)
