# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /poke                       controllers.Application.pokeElasticsearch

# Images
GET     /image/:id                  controllers.Application.getImage(id: String)
PUT     /image/:id                  controllers.Application.putImage(id: String)

POST    /delete-index               controllers.Application.deleteIndex

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
