{
    "defaultStacks": ["mediaservice"],
    "packages": {
        "mediaapi": {
            "type": "autoscaling",
            "data": {
                "port": 9000,
                "bucket": "media-service-dist",
                "publicReadAcl": false
            }
        }
    },
    "recipes": {
        "default": {
            "depends": ["artifactUploadOnly", "deployOnly"]
        },
        "deployOnly": {
            "actionsBeforeApp": ["mediaapi.deploy"]
        },
        "artifactUploadOnly": {
            "actionsBeforeApp": ["mediaapi.uploadArtifacts"]
        }
    }
}
