{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "globals": {},
  "rules": {
    "new-cap": 2,
    "quotes": 0,
    "no-undef": 2,
    "no-unused-vars": 2,
    "max-depth": [
      2,
      3
    ],
    "complexity": [
      2,
      16
    ],
    "max-len": "off",
    "curly": [
      2,
      "all"
    ],
    "eol-last": 2,
    "semi": [
      2,
      "always"
    ],
    "space-infix-ops": 2,
    "keyword-spacing": [
      2,
      {}
    ],
    "no-spaced-func": 2,
    "comma-dangle": [
      2,
      "never"
    ],
    "no-trailing-spaces": 2
  },
  "overrides": [{
    "files": ["*.tsx", "*.ts"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
//    "plugins": ["jest"],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "settings": { "react": { "version": "detect" } }
  }]
}
