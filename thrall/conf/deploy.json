{
    "packages": {
        "thrall": {
            "type": "autoscaling",
            "data": {
                "port": 9000,
                "bucket": "media-service-dist"
            }
        }
    },
    "recipes": {
        "default": {
            "depends": ["artifactUploadOnly", "deployOnly"]
        },
        "deployOnly": {
            "actionsBeforeApp": ["thrall.deploy"]
        },
        "artifactUploadOnly": {
            "actionsBeforeApp": ["thrall.uploadArtifacts"]
        }
    }
}
