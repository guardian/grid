GET     /                                 controllers.Application.index

GET     /metadata/:id                     controllers.Application.getAllMetadata(id: String)

GET     /metadata/:id/archived            controllers.Application.getArchived(id: String)
PUT     /metadata/:id/archived            controllers.Application.setArchived(id: String)
DELETE  /metadata/:id/archived            controllers.Application.unsetArchived(id: String)

GET     /metadata/:id/labels              controllers.Application.getLabels(id: String)
POST    /metadata/:id/labels              controllers.Application.addLabels(id: String)
DELETE  /metadata/:id/labels/*label       controllers.Application.removeLabel(id: String, label: String)

GET     /metadata/:id/flags               controllers.Application.getFlags(id: String)
POST    /metadata/:id/flags               controllers.Application.addFlags(id: String)
DELETE  /metadata/:id/flags/*flag         controllers.Application.removeFlag(id: String, flag: String)

GET     /metadata/:id/metadata            controllers.Application.getMetadata(id: String)
PUT     /metadata/:id/metadata            controllers.Application.setMetadata(id: String)

