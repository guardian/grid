<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5relative %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

<!--  <logger name="com.sksamuel.elastic4s" level="DEBUG" />-->

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
