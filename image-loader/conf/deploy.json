{
    "packages": {
        "image-loader": {
            "type": "asg-elb",
            "data": {
                "port": 9000,
                "bucket": "media-service-dist"
            }
        }
    },
    "recipes": {
        "default": {
            "depends": ["artifactUploadOnly", "deployOnly"]
        },
        "deployOnly": {
            "actionsBeforeApp": ["image-loader.deploy"]
        },
        "artifactUploadOnly": {
            "actionsBeforeApp": ["image-loader.uploadArtifacts"]
        }
    }
}
